@using Places.Models;

<h1>Cities List</h1>

<ul>
  @if (Model.Count == 0)
  {
    <p>You have no cities in your to do list!</p>
  }
  @if(Model.Count != 0)
  {
    @foreach (City city in Model)
    {
      <li><a href='/cities/@city.GetId()'>@city.GetDescription()</a></li>
    }
  }
</ul>

<a href="/cities/new">Add a new city.</a>

<form action="/cities/delete" method="post">
  <button type="submit" name="button">Clear all cities</button>
</form>
